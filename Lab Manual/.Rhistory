require(tidyverse)
require(cowplot)
read.csv(file = theoretical_populations.csv, header = TRUE, sep = ",")
plot1 <- ggplot(mtcars, aes(wt, mpg)) +
geom_blank() +
theme_classic(base_size = 12) +
scale_y_log10(limits = c(1,1000), breaks = c(1,10,100,1000),
expand = c(0,0)) +
theme(axis.title.x = element_blank(),
axis.text.x = element_blank(),
axis.ticks.x = element_blank()) +
ylab("Number of survivors") +
xlab("Age (in relative units)") +
annotation_logticks(sides = "l")
plot1
ggsave(plot1, device = "pdf", filename = "base_plot.pdf", height = 4, width = 4)
ggsave(plot1, device = "pdf", filename = "base_plot.pdf", height = 3, width = 5)
